// server/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int               @id @default(autoincrement())
  name          String            @db.VarChar(120)
  email         String            @unique @db.VarChar(180)
  password      String
  role          String            @db.VarChar(20)
  phone         String            @db.VarChar(20)
  register_date DateTime          @default(now())
  verification  UserVerification?
  announcement  Announcement[]
  reservation   Reservation[]
  message_env   Message[]
  review        Review[]
}

model UserVerification {
  id            Int       @id @default(autoincrement())
  user_id       Int       @unique
  user          User      @relation(fields: [user_id], references: [id])
  url_dni       String?
  url_carne     String?
  state         String    @default("pendiente") @db.VarChar(20)
  revision_date DateTime?
}

model Announcement {
  id            Int                   @id @default(autoincrement())
  owner_id      Int
  owner         User                  @relation(fields: [owner_id], references: [id])
  title         String                @db.VarChar(150)
  description   String?               @db.Text
  price         Decimal               @db.Decimal(10, 2)
  district      String                @db.VarChar(120)
  rules         String?               @db.Text
  latitude      Float?
  longitude     Float?
  creation_date DateTime              @default(now())
  image         ImageAnnouncement[]
  services      AnnouncementService[]
  reservations  Reservation[]
}

model ImageAnnouncement {
  id              Int          @id @default(autoincrement())
  announcement_id Int
  announcement    Announcement @relation(fields: [announcement_id], references: [id])
  url             String       @db.Text
}

model AnnouncementService {
  id              Int          @id @default(autoincrement())
  announcement_id Int
  announcement    Announcement @relation(fields: [announcement_id], references: [id])
  service         String       @db.VarChar(120)
}

model Reservation {
  id              Int          @id @default(autoincrement())
  announcement_id Int
  announcement    Announcement @relation(fields: [announcement_id], references: [id])
  student_id      Int
  student         User         @relation(fields: [student_id], references: [id])
  state           String       @default("pendiente") @db.VarChar(20)
  creation_date   DateTime     @default(now())

  messages Message[]
  review   Review?
}

model Message {
  id             Int         @id @default(autoincrement())
  reservation_id Int
  reservation    Reservation @relation(fields: [reservation_id], references: [id])
  sender_id      Int
  sender         User        @relation(fields: [sender_id], references: [id])
  content        String?     @db.Text
  sent_date      DateTime    @default(now())
}

model Review {
  id             Int         @id @default(autoincrement())
  reservation_id Int         @unique
  reservation    Reservation @relation(fields: [reservation_id], references: [id])
  user_id        Int
  user           User        @relation(fields: [user_id], references: [id])
  stars          Int
  comment        String?     @db.Text
}
